<Window x:Class="UcanObjeOyunu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UcanObjeOyunu"
        mc:Ignorable="d"
        Title="Uçan Obje Oyunu - OOP Macerası" Height="600" Width="1000"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Game Header -->
        <Border Grid.Row="0" Background="#FF2B2B2B" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Skor: " Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock x:Name="ScoreText" Text="0" Foreground="#FF4FC3F7" FontSize="24" FontWeight="Bold" 
                          VerticalAlignment="Center" Margin="10,0,20,0"/>
                <Button x:Name="StartButton" Content="Oyunu Başlat" Click="StartButton_Click" 
                        Padding="20,5" FontSize="16" Background="#FF4CAF50" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Game Canvas -->
        <Border Grid.Row="1" BorderBrush="#FF424242" BorderThickness="1" Background="#FFE1F5FE">
            <Canvas x:Name="GameCanvas" ClipToBounds="True" Focusable="True" FocusVisualStyle="{x:Null}">
                <!-- Game elements will be added programmatically -->
                <TextBlock x:Name="GameOverText" Text="Oyun Bitti!" 
                          FontSize="48" FontWeight="Bold" Foreground="#FFE53935"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          Visibility="Collapsed"/>
                <TextBlock x:Name="StartGameText" Text="Oyunu başlatmak için 'Başlat' butonuna tıklayın" 
                          FontSize="24" FontWeight="SemiBold" Foreground="#FF424242"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          TextAlignment="Center"/>
            </Canvas>
        </Border>

        <!-- Game Instructions -->
        <Border Grid.Row="2" Background="#FFEEEEEE" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Oyun Kontrolleri: " FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock Text="Zıplamak için BOŞLUK tuşuna basın"/>
                <TextBlock Text=" | " Margin="10,0"/>
                <TextBlock Text="Oyunu başlatmak/durdurmak için ENTER"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
